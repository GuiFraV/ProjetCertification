{% extends 'base.html.twig' %}

{% block title %}S'enregistrer - SummerField{% endblock %}

{% block body %}

<main class="container mb-5" style="height: 67vh;">

    <h1 class="text-center">S'enregistrer</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.role) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-success">S'enregistrer</button>
    {{ form_end(registrationForm) }}

</main>

{% endblock %}
