{% extends 'base.html.twig' %}

{% block title %}Mes Articles - SummerField{% endblock %}

{% block body %}
<main class="container" style="height: 67vh;">
    <h1>Mes Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>
                    <img  style="width: 80px;" src="{{ asset('uploads/' ~ article.imageFileName) }}"/>
                </td>
                <td>{{ article.nom }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.prix }}</td>
                <td>{{ article.stock }}</td>
                <td style ="border: 1px soldi black;">
                    <div style ="border: 1px solid black;">
                        <a href="{{ path('seller_article_edit', {'id': article.id}) }}">Modifier</a>
                        {{ include('Seller/seller_article/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seller_article_new') }}">Ajouter</a>
</main>
{% endblock %}
